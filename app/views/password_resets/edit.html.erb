<% provide(:title, 'Новый пароль') %>
<h1>Новый пароль</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>

        <%= render 'shared/error_messages', object: @user, title: "Ошибки при смене пароля: " %>

        <%= hidden_field_tag :email, @user.email %>

        <%= f.label :password, "Пароль" %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.label :password_confirmation, "Подтверждение пароля" %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>

        <%= f.submit "Сменить пароль", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
