<% provide(:title, 'Редактирование данных пациента') %>

<h1>Редактирование данных пациента</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@customer) do |customer_fields| %>
        <%= customer_fields.label :name, "ФИО:" %>
        <%= customer_fields.text_field :name %>

        <table>
          <tr>
            <td><%= customer_fields.label :email, "E-mail:" %></td>
            <td><%= customer_fields.label :phone, "Телефон:" %></td>
          </tr>
          <tr>
            <td><%= customer_fields.email_field :email %></td>
            <td><%= customer_fields.telephone_field :phone %></td>
          </tr>
        </table>
        <%= customer_fields.label :birth_date, "Дата рождения:" %>
        <%= customer_fields.date_field :birth_date %>
        <%= customer_fields.label :address, "Адрес:" %>
        <%= customer_fields.text_area :address  %>
        <%= customer_fields.submit "Изменить", class: "btn btn-large btn-primary" %>
        <%= link_to "Удалить", @customer, method: :delete, class: "btn btn-large btn-primary",
                    data: { confirm: "Удалить пациента #{@customer.name} ?" } %>
    <% end %>
    <% if @customer.appointments.any? %>
        <h3>Записи на прием:</h3>
        <ul class="appointments">
          <%= render @appointments %>
        </ul>
        <%= will_paginate @appointments %>
    <% end %>
  </div>

</div>