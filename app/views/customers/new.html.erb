<% provide(:title, 'Новый пациент') %>

<h1>Новый пациент</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@customer) do |customer_fields| %>
        <%= render 'shared/error_messages', object: @customer, title: "Ошибки при добавлении пациента: " %>
        <%= customer_fields.label :name, "ФИО:" %>
        <%= customer_fields.text_field :name, class: "form-control" %>

        <%= render 'shared/customer_additional_fields', f:customer_fields %>

        <%= customer_fields.submit "Добавить", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
