<% provide(:title, 'Новый элемент распиания') %>
<h1>Новая запись на прием</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@timetable_item) do |f| %>
        <%= render 'shared/error_messages', object: @timetable_item, title: "Ошибки при добавлении элемента расписания: " %>
        <%= render 'timetable_fields', f: f %>

        <%= f.submit "Добавить элемент расписания", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>