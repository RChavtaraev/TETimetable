<% provide(:title, 'Редактирование данных мед. центра') %>

<h1>Редактирование данных медицинского центра</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@place) do |place_fields| %>
        <%= render 'shared/error_messages', object: @place, title: "Ошибки при редактировании данных мед. центра: " %>
        <%= place_fields.label :name, "Название:" %>
        <%= place_fields.text_field :name, class: "form-control" %>

        <%= place_fields.label :phone, "Телефон:" %>
        <%= place_fields.telephone_field :phone, id: 'phone', class: "form-control" %>

        <%= place_fields.label :email, "E-mail:" %>
        <%= place_fields.email_field :email, id: 'email', class: "form-control" %>

        <%= place_fields.label :url, "Сайт:" %>
        <%= place_fields.text_field :url, class: "form-control" %>

        <%= place_fields.label :address, "Адрес:" %>
        <%= place_fields.text_area :address, class: "form-control" %>

        <%= place_fields.label :comment, "Описание:" %>
        <%= place_fields.text_area :comment, class: "form-control" %>

        <%= place_fields.submit "Изменить", class: "btn btn-large btn-primary" %>


        <%= link_to "Удалить", @place, method: :delete, class: "btn btn-large btn-primary",
                    data: { confirm: "Удалить мед.центр #{@place.name} ?" } %>


    <% end %>

  </div>

</div>
